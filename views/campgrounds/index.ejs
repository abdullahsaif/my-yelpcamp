<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
<div class="container mt-5">
  <%- include("../partials/flash") %>
  <h1>All Campgrounds </h1>
  <div>
    <a href="/campgrounds/new">Add New Campground</a>
  </div>
  <% for(let campground of campgrounds) {%>
    <div class="card mb-3">
      <div class="row">
        <div class="col-md-4">
          <% if(campground.images.length) {%>
            <img src="<%=campground.images[0].url%>" class="img-fluid" alt="">
            <% } else { %>
              <img src="https://res.cloudinary.com/dmxezvcx8/image/upload/v1612730442/YelpCamp/ojxwbvrwk3hnnncukeqs.jpg"
                class="img-fluid" alt="">
              <% } %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">
              <%= campground.title %>
            </h5>
            <p class="card-text">
              <%= campground.description %>
            </p>
            <p><small class="text-muted">
                <%= campground.location %>
              </small></p>
            <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">
              <%= campground.title %>
            </a>
          </div>
        </div>
      </div>
    </div>
    <% } %>
